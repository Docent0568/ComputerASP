@model bool
@if (Model == true)
{
    <td style="background-color:green; padding:3px 5px 3px 5px; width:30px; vertical-align: middle; text-align:center; color:#ecf0f1">
        @Html.Encode("Есть")
    </td>
}
@if (Model == false)
{
    <td style="background-color:red; padding:3px 5px 3px 5px;text-align:center;width:30px; color:#ecf0f1">
           @Html.Encode("Нету")
    </td>

}
